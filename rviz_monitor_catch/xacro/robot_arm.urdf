<?xml version="1.0"?>
<robot name="robot_arm"
    xmlns:xacro="http://ros.org/wiki/xacro">
    <link name="base_link"/>
    <link name="lower_link">
        <visual>
            <geometry>
                <box size="0.4 1.0 0.1"/>
            </geometry>
            <origin xyz="0 0 0"/>
            <material name="white">
                <color rgba="1 1 1 1"/>
            </material>
        </visual>
    </link>
    <link name="middle_link">
        <visual>
            <geometry>
                <box size="0.4 0.2 0.1"/>
            </geometry>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <material name="white">
                <color rgba="1 1 1 1"/>
            </material>
        </visual>
    </link>
    <link name="upper_link">
        <visual>
            <geometry>
                <box size="1.0 0.1 0.1"/>
            </geometry>
            <origin xyz="0 0 0"/>
            <material name="white">
                <color rgba="1 1 1 1"/>
            </material>
        </visual>
    </link>
    <link name="handbase_link">
        <visual>
            <geometry>
                <box size="0.1 0.1 0.02"/>
            </geometry>
        </visual>
        <origin xyz="0 0 0"/>
        <material name="white">
            <color rgba="1 1 1 1"/>
        </material>
    </link>
    <link name="hand_link">
        <visual>
            <geometry>
                <box size="0.1 0.1 0.16"/>
            </geometry>
        </visual>
        <origin xyz="0 0 0"/>
        <material name="white">
            <color rgba="1 1 1 1"/>
        </material>
    </link>
    <link name="grasp_link">
        <visual>
            <geometry>
                <box size="0.1 0.2 0.01"/>
            </geometry>
        </visual>
        <origin xyz="0 0 0"/>
        <material name="white">
            <color rgba="1 1 1 1"/>
        </material>
    </link>

    <joint name="base_lower" type="fixed">
        <parent link="base_link"/>
        <child link="lower_link"/>
        <origin xyz="0 0 0.05"/>
    </joint>
    <joint name="lower_middle" type="prismatic">
        <parent link="lower_link"/>
        <child link="middle_link"/>
        <origin xyz="0 0 0.1"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit lower="-0.4" upper="0.4" effort="100" velocity="0.5"/>
    </joint>
    <joint name="middle_upper" type="prismatic">
        <parent link="middle_link"/>
        <child link="upper_link"/>
        <origin xyz="0 0.05 0.1"/>
        <axis xyz="1 0 0"/>
        <limit lower="-0.3" upper="0.3" effort="100" velocity="0.5"/>
    </joint>
    <joint name="upper_handbase" type="prismatic">
        <parent link="upper_link"/>
        <child link="handbase_link"/>
        <origin xyz="0 0 0.06"/>
        <axis xyz="1 0 0"/>
        <limit lower="-0.45" upper="0.45" effort="100" velocity="0.5"/>
    </joint>
    <joint name="handbase_hand" type="prismatic">
        <parent link="handbase_link"/>
        <child link="hand_link"/>
        <origin xyz="0 0.1 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-0.1" upper="0.1" effort="100" velocity="0.5"/>
    </joint>
    <joint name="hand_grasp" type="revolute">
        <parent link="hand_link"/>
        <child link="grasp_link"/>
        <origin xyz="0 0.05 -0.085"/>
        <axis xyz="0 0 1"/>
        <limit lower="-1.57" upper="1.57" effort="100" velocity="0.5"/>
    </joint>
</robot>    